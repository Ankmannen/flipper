<UserControl x:Class="Flipper.WinPhone.Controls.RangeSlider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <Rectangle x:Name="BackgroundRectangle" Height="20" Fill="LightGray"></Rectangle>
        <Rectangle x:Name="Range" HorizontalAlignment="Left" Height="20" Fill="Blue" />       
        <Rectangle x:Name="Left" Width="20" Height="20" Fill="DarkGray" />
        <Rectangle x:Name="LeftTouch" Width="60" Height="60" Fill="Transparent" />       
        <Rectangle x:Name="Right" Width="20" Height="20" Fill="DarkGray" />
        <Rectangle x:Name="RightTouch" Width="60" Height="60" Fill="Transparent" />
    </Grid>
</UserControl>